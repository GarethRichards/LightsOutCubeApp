<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1. Dusk Glow -->
    <LinearGradientBrush x:Key="Gradient_DuskGlow" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0F2027" Offset="0.0"/>
        <GradientStop Color="#FF203A43" Offset="0.5"/>
        <GradientStop Color="#FF2C5364" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 2. Sunset Coral -->
    <LinearGradientBrush x:Key="Gradient_SunsetCoral" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFF6A88" Offset="0.0"/>
        <GradientStop Color="#FFFF8A00" Offset="0.6"/>
        <GradientStop Color="#FFFFC371" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 3. Deep Ocean -->
    <LinearGradientBrush x:Key="Gradient_DeepOcean" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF021B79" Offset="0.0"/>
        <GradientStop Color="#FF0575E6" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 4. Purple Cosmos -->
    <LinearGradientBrush x:Key="Gradient_PurpleCosmos" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF20002C" Offset="0.0"/>
        <GradientStop Color="#FFCBB4D4" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 5. Emerald Teal -->
    <LinearGradientBrush x:Key="Gradient_EmeraldTeal" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0F9B8E" Offset="0.0"/>
        <GradientStop Color="#FF00C6AE" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 6. Warm Sunrise -->
    <LinearGradientBrush x:Key="Gradient_WarmSunrise" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFF5F6D" Offset="0.0"/>
        <GradientStop Color="#FFFFC371" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 7. Animated sky -->
    <LinearGradientBrush x:Key="Gradient_Animated_Sky" StartPoint="0,0" EndPoint="1,0" MappingMode="RelativeToBoundingBox">
        <GradientStop Color="#FF0F2027" Offset="0.0"/>
        <GradientStop Color="#FF203A43" Offset="0.5"/>
        <GradientStop Color="#FF2C5364" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 8. Crimson Dawn -->
    <LinearGradientBrush x:Key="Gradient_CrimsonDawn" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2C003E" Offset="0.0" />
        <GradientStop Color="#FFB2456A" Offset="0.55" />
        <GradientStop Color="#FFFF8A80" Offset="1.0" />
    </LinearGradientBrush>

    <!-- 9. Azure Night -->
    <LinearGradientBrush x:Key="Gradient_AzureNight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0B3D91" Offset="0.0"/>
        <GradientStop Color="#FF1E90FF" Offset="0.6"/>
        <GradientStop Color="#FF8ED1FF" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 10. Forest Mist -->
    <LinearGradientBrush x:Key="Gradient_ForestMist" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0B3A2E" Offset="0.0"/>
        <GradientStop Color="#FF157A6E" Offset="0.5"/>
        <GradientStop Color="#FF9EEBCD" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 11. Magenta Aurora -->
    <LinearGradientBrush x:Key="Gradient_MagentaAurora" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF3A0F5B" Offset="0.0"/>
        <GradientStop Color="#FFD53A7B" Offset="0.5"/>
        <GradientStop Color="#FFFFE29F" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 12. Golden Hour -->
    <LinearGradientBrush x:Key="Gradient_GoldenHour" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF2A1A04" Offset="0.0"/>
        <GradientStop Color="#FFFFB347" Offset="0.5"/>
        <GradientStop Color="#FFFFE0A8" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 13. Cool Mint -->
    <LinearGradientBrush x:Key="Gradient_CoolMint" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF0F2027" Offset="0.0"/>
        <GradientStop Color="#FF1FD1C8" Offset="0.6"/>
        <GradientStop Color="#FFB8FFF4" Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>