<Window x:Class="LightsOutCube.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About LightsOutCube"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FF111217"
        Foreground="White"
        FontFamily="Segoe UI"
        >
    <Border Padding="18" CornerRadius="6" Background="#DD111217">
        <StackPanel Width="380">
            <TextBlock Text="LightsOut Cube" FontSize="22" FontWeight="Bold" Margin="0,0,0,6"/>
            <TextBlock x:Name="VersionText" FontSize="12" Opacity="0.9" Margin="0,0,0,12"/>
            <TextBlock Text="A small WPF 3D Lights‑Out puzzle demo. Written by Gareth Richards." TextWrapping="Wrap" Margin="0,0,0,12"/>
            <TextBlock Text="Credits" FontWeight="SemiBold" Margin="0,8,0,4"/>
            <TextBlock Text="• Trackball code adapted from 3DTools sample" TextWrapping="Wrap" Margin="0,0,0,2"/>
            <TextBlock Text="• Gradient themes and animations by project" TextWrapping="Wrap" Margin="0,0,0,8"/>
            <TextBlock Text="Contact / Repository" FontWeight="SemiBold" Margin="0,8,0,4"/>
            <TextBlock Text="https://github.com/GarethRichards/LightsOutCubeApp" TextWrapping="Wrap" Opacity="0.9" Margin="0,0,0,12"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" Width="84" Padding="6,4" Margin="6,0,0,0" Click="CloseButton_Click">Close</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>